{
  "name": "autocommiter",
  "displayName": "Auto Commiter",
  "description": "Automatically commits and pushes changes when saving files",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autocommiter.toggleEnable",
        "title": "Toggle Auto Commiter"
      }
    ],
    "configuration": {
      "title": "Auto Commiter",
      "properties": {
        "autocommiter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable auto commit and push"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.1.3"
  }
} 